{
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [ {
      "source": "**",
      "destination": "/index.html"
    },
    { "source": "/api/authenticate", "function": "authenticate" }
  ]
  },
  "database": {
    "rules": "database.rules.json"
  }
}
